@{
    Layout = null;
    ViewBag.Title = "Signup";
   
}
 @model project.Models.user

            <h3 id="myModalLabel">Signup</h3>
  
      


@using (Html.BeginForm("save","Home", FormMethod.Post ))
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
     
     <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
     
    
    <div class="editor-label">
            @Html.LabelFor(model => model.Email_Id)
        </div>
     
     <div class="editor-field">
            @Html.EditorFor(model => model.Email_Id)
            @Html.ValidationMessageFor(model => model.Email_Id)
        </div>
    
    
       <div class="editor-label">
            @Html.LabelFor(model => model.Password)
        </div>
    <div class="editor-field">
            @Html.EditorFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </div>
    
    <div class="editor-label">
            @Html.LabelFor(model => model.Contact_No)
        </div>
    <div class="editor-field">
            @Html.EditorFor(model => model.Contact_No)
            @Html.ValidationMessageFor(model => model.Contact_No)
        </div>
    
    <div class="editor-label">
            @Html.LabelFor(model => model.City)
        </div>
    <div class="editor-field">
            @Html.EditorFor(model => model.City)
            @Html.ValidationMessageFor(model => model.City)
        </div>
   
    
    <input type="submit" value="Signup" />

}

          


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


